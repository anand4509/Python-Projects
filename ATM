balance = 99526.35223
pin = 8252

for attempts in range(0,3):
    user_pin = int(input("Enter your PIN: "))
    if user_pin == pin:
        print("1. Check balance\n2. Withdraw\n3. Change PIN\n4. Exit")
        choice = int(input("Enter your choice: "))

        match choice:
            case 1:
                print("Your balance is:", balance)

            case 2:
                amount = float(input("Enter amount: "))
                if amount <= balance:
                    balance -= amount
                    print("Transaction Successful! Remaining balance:", balance)
                else:
                    print("Insufficient balance!")

            case 3:
                new_pin = int(input("Enter new PIN: "))
                pin = new_pin
                print("PIN changed successfully!")

            case 4:
                print("Exit!")
                break
        break
    else:
        print("Wrong PIN! Attempts left:", 2 - attempts)
        if attempts == 3:
            print("Limit exceeded! Your card is blocked.")
